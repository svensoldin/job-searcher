# Environment Configuration for AI Job Hunter
# Copy this file to .env and configure with your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# User Configuration
USER_EMAIL=your_email@gmail.com
USER_NAME=Your Name

# Job Search Criteria
JOB_KEYWORDS=software engineer,python developer,full stack developer
JOB_LOCATIONS=Remote,San Francisco,New York
EXPERIENCE_LEVEL=Mid-level
REQUIRED_SKILLS=JavaScript,TypeScript,Python
PREFERRED_SKILLS=React,Node.js,AWS
INDUSTRIES=Technology,Software
COMPANY_SIZE=Any
REMOTE_PREFERENCE=Remote preferred
SALARY_RANGE=100000-180000
CAREER_GOALS=Professional growth and challenging work

# Scheduling Configuration
CRON_SCHEDULE=0 9 * * 1
TIMEZONE=America/New_York

# Scraping Configuration
MAX_JOBS=100
DELAY_MS=1000
TIMEOUT_MS=30000

# Analysis Configuration
MAX_ANALYZE=50
ANALYSIS_BATCH_SIZE=5
SCORE_THRESHOLD=60

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/job-hunter.log

# Scheduler Configuration
SCHEDULE_DAY_OF_WEEK=monday
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0

# Application Settings
MAX_JOBS_PER_REPORT=10
LOG_LEVEL=INFO
