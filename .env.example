# Copy this file to .env and configure with your actual values

# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/job-hunter

# Job Search Criteria
JOB_KEYWORDS=frontend engineer,frontend developer,fullstack developer,développeur frontend,développeur fullstack,développeur front
JOB_LOCATIONS=Remote, Remote Europe, Remote EU, Remote EMEA
EXPERIENCE_LEVEL=3-4 years
CORE_SKILLS=JavaScript,TypeScript,React,Next.js
REMOTE_PREFERENCE=Remote preferred
EXCLUDED_KEYWORDS=bachelor,angular

# Scheduling Configuration (Dual Schedule)
CRON_SCHEDULE_SCRAPE=0 9 * * 1
CRON_SCHEDULE_ANALYZE=0 9 * * 2-5
TIMEZONE=Europe/Paris

# Scraping Configuration
MAX_JOBS=100
DELAY_MS=1000
TIMEOUT_MS=30000

# Analysis Configuration
MAX_ANALYZE=9
ANALYSIS_BATCH_SIZE=1
SCORE_THRESHOLD=60

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/job-hunter.log

# Scheduler Configuration
SCHEDULE_DAY_OF_WEEK=monday
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0

# Application Settings
LOG_LEVEL=INFO
