# Environment Configuration for AI Job Hunter
# Copy this file to .env and configure with your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/job-hunter

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
# You need to generate a specific app password with your provider
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# User Configuration
USER_EMAIL=your_email@gmail.com
USER_NAME=Your Name

# Job Search Criteria
JOB_KEYWORDS=software engineer,python developer,full stack developer
JOB_LOCATIONS=Remote,San Francisco,New York
EXPERIENCE_LEVEL=Mid-level
CORE_SKILLS=JavaScript,TypeScript,Python
REMOTE_PREFERENCE=Remote preferred

# Scheduling Configuration (Dual Schedule)
CRON_SCHEDULE_SCRAPE=0 9 * * 1
CRON_SCHEDULE_ANALYZE=0 9 * * 2-5
TIMEZONE=Europe/Paris

# Scraping Configuration
MAX_JOBS=100
DELAY_MS=1000
TIMEOUT_MS=30000

# Analysis Configuration (Optimized for Free OpenAI Plan)
MAX_ANALYZE=3
ANALYSIS_BATCH_SIZE=1
SCORE_THRESHOLD=60

# OpenAI Rate Limiting (Free Plan)
OPENAI_REQUESTS_PER_MINUTE=3
OPENAI_REQUESTS_PER_DAY=200
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_DELAY_BETWEEN_REQUESTS=20000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/job-hunter.log

# Scheduler Configuration
SCHEDULE_DAY_OF_WEEK=monday
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0

# Application Settings
MAX_JOBS_PER_REPORT=10
LOG_LEVEL=INFO
